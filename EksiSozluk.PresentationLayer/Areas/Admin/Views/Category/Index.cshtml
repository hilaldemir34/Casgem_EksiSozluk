@model IPagedList<EksiSozluk.EntityLayer.Concrete.Category>
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}

<h2>Kategori Listesi</h2>
    <div class="col-md-12 col-sm-12  ">
        <div class="x_panel">
            <div class="x_content">
            
                <table class="table table-striped">
             
                    <thead>

                        <tr>
                            <th>#</th>
                            <th>Kategori Adı</th>
                            <th>Kategori Açıklaması</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@item.CategoryID</th>
                            <td>@item.CategoryName</td>
                            <td>@item.CategoryDescription</td>
                            <td><a href="/Category/CategoryDelete/@item.CategoryID/" id="DeleteBtn" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Category/CategoryUpdate/@item.CategoryID/" id="UpdateBtn" class="btn btn-success">Güncelle</a></td>
                         
                        </tr>
                     
                    </tbody>
                 }
                </table>
           <a href="/Category/AddCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>

            </div>
        </div>
    </div>
    <br />

@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new{page}))