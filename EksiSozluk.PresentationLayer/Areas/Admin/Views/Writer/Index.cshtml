@model List<EksiSozluk.EntityLayer.Concrete.Writer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}

<h1>Yazar Listesi</h1>>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Yazar Adı</th>
        <th>Yazar Soyadı</th>
        <th>Şehir</th>
        <th>Telefon Numarası</th>
        <th>Email</th>S
        <th>Status</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.WriterID</td>
            <td>@item.Name</td>
            <td>@item.SurName</td>
            <td>@item.City</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>@item.Status</td>
        </tr>
        
    }
    </table>
<a href="/AddWriter/Writer/" class="btn btn-outline-primary">Yeni Yazar Girişi</a>"
